package javapackage;

public class uC2 {
	public static void main(String[] args) {
		//constants
		int IS_FULL_TIME = 1;	
		int EMP_RATE_PER_HR = 20;
		int income;
		
		
		//com
		double empCheck = Math.floor(Math.random() * 10) % 2;
		
		if (empCheck ==IS_FULL_TIME)
		{
			int no_of_hrs = 8;
			income = no_of_hrs * EMP_RATE_PER_HR;
			
			System.out.println("salary is: "+income);
			}
		else
		{
			income = 0;
			System.out.println("salary is: "+income);
		}
	}
	}
