package javapackage;

public class Uc5 {
public static void main(String[] args) {
	//constants
			
			int IS_FULL_TIME =1;
			int EMP_RATE_PER_HR = 16;
			int NUM_WORKING_DAYS = 20;
			int total_salary=0;
			int salary;
			int hrs;
			
			//COM
			double empCheck = Math.floor(Math.random() * 10) % 2;
			
			for ( int i = 0; i<=NUM_WORKING_DAYS; i++)
			{
			
			if (empCheck ==IS_FULL_TIME)
			{
				hrs = 8;	
			}
			else
			{
				hrs = 0;
			}
			
			salary=hrs*EMP_RATE_PER_HR;
			total_salary=NUM_WORKING_DAYS*salary;}
			
			System.out.println("salary is: "+total_salary);
			
					
	
}
}
